package Assignment.Game;

import javafx.scene.canvas.GraphicsContext;
import javafx.scene.image.Image;

public class Player extends GameObject {
    private static Player instance;

    private Player(double x, double y, GraphicsContext gc, GameContext gameContext) {
        super(x, y, gc, gameContext);
        this.img = new Image(Player.class.getResource("iceT.png").toExternalForm());
    }

    public static synchronized Player getInstance(double x, double y, GraphicsContext gc, GameContext gameContext) {
        if (instance == null) {
            instance = new Player(x, y, gc, gameContext);
        }
        return instance;
    }

    @Override
    public void update() {
        if (img != null) {
            gc.drawImage(img, x - img.getWidth() / 2, y - img.getHeight() / 2);
        }
    }
}
