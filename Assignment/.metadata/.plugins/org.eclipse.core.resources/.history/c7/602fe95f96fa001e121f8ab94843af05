package Assignment.Game;

import javafx.scene.canvas.GraphicsContext;
import javafx.scene.image.Image;

public class Player extends GameObject {
    private static Player instance;

    private Player(double x, double y, GraphicsContext gc) {
        super(x, y, gc);
        img = new Image(Player.class.getResource("iceT.png").toExternalForm());
    }

    public static synchronized Player getInstance(double x, double y, GraphicsContext gc) {
        if (instance == null) {
            instance = new Player(x, y, gc);
        }
        return instance;
    }

    @Override
    public void moveLeftIfPossible() {
        // Implementation specific to player
    }

    @Override
    public void moveRightIfPossible() {
        // Implementation specific to player
    }

    @Override
    public void moveUpIfPossible() {
        // Implementation specific to player
    }

    @Override
    public void moveDownIfPossible() {
        // Implementation specific to player
    }
}
